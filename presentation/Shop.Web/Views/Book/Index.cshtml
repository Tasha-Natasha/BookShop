@model BookModel

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>
<p><strong>@Model.Author</strong></p>
<p>@Model.Description</p>
<p>Price <strong>@Model.Price</strong></p>
<form action="@Url.Action(nameof(OrderController.AddItem), "Order")" method="post">
    <input type="hidden" name="bookId" value="@Model.Id"/>
    <input type="hidden" name="count" value="1"/>
    <button class="btn btn-outline-success" type="submit">В корзину</button>
</form>

